<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_domestico">
        <field name="name">Domestico</field>
        <field name="description">The Domestico Applilcation</field>
        <field name="sequence">20</field>
    </record>

     <record id="domestico_group_user" model="res.groups">
        <field name="name">Cliente</field>
        <field name="category_id" ref="module_category_domestico"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

      <record id="domestico_group_vendor" model="res.groups">
            <field name="name">Proveedor</field>
            <field name="category_id" ref="module_category_domestico"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

    <record id="domestico_group_asesor" model="res.groups">
        <field name="name">Asesor</field>
        <field name="category_id" ref="module_category_domestico"/>
        <field name="implied_ids" eval="[(4, ref('domestico.domestico_group_user')), (4, ref('account.group_account_invoice'))]"/>
    </record>

     <record id="domestico_group_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_domestico"/>
        <field name="implied_ids" 
        eval="[
            (4, ref('base.group_erp_manager')), 
            (4, ref('domestico.domestico_group_user')), 
            (4, ref('domestico.domestico_group_vendor')), 
            (4, ref('domestico.domestico_group_asesor')), 
            (4, ref('sales_team.group_sale_manager')), 
            (4, ref('product.group_product_pricelist')),
            (4, ref('account.group_account_manager')),
            (4, ref('stock.group_stock_manager')),
        ]"/>
    </record>

    <record id="make_invisible" model="res.groups">
        <field name="name">Invisible</field>
    </record>
    
    <record id="domestico_user_group_record_rule" model="ir.rule">
        <field name="name">Directorio mis referidos</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[('parent_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('domestico.domestico_group_user'))]"/>
    </record>

    <record id="domestico_manager_group_record_rule" model="ir.rule">
        <field name="name">Directorio todos los referidos</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('domestico.domestico_group_manager'))]"/>
    </record>

</odoo>