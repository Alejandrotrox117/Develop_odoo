<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_domestico">
            <field name="name">Domestico</field>
            <field name="description">The Domestico Applilcation</field>
            <field name="sequence">20</field>
    </record>

     <record id="domestico_group_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="module_category_domestico"/>
        <field name="implied_ids" eval="[(ref('base.group_user'))]"/>
    </record>

     <record id="domestico_group_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_domestico"/>
        <field name="implied_ids" eval="[(ref('domestico_group_user'))]"/>
    </record>

<data noupdate="1">

    <record id="domestico_user_group_record_rule" model="ir.rule">
        <field name="name">Directorio mis referidos</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="domain_force">[('parent_id', 'in', [user.partner_id.id])]</field>
        <field name="groups" eval="[(6, 0, [ref('domestico.domestico_group_user')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="domestico_manager_group_record_rule" model="ir.rule">
        <field name="name">Directorio todos los referidos</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(6, 0, [ref('domestico.domestico_group_manager')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</data>
</odoo>