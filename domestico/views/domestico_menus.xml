<odoo>
  <data>

    <!-- Top menu item -->

    <menuitem 
        id="domestico_menu_root" 
        name="Domestico" sequence="10"
        groups="domestico.domestico_group_user,domestico.domestico_group_vendor">
        
        <menuitem 
            id="domestico_client_menu_root" 
            name="Cientes"
            groups="domestico.domestico_group_user"
            sequence="1">

            <menuitem 
                id="domestico_product_assignment_solic_menu_action" 
                name="Solicitudes de Electrodomestico"
                sequence="1"
                action="domestico.domestico_product_assignment_solic_action"/>

            <menuitem 
                id="domestico_product_assignment_menu_action" 
                name="Asignación de Electrodomestico" 
                sequence="2" 
                action="domestico.domestico_product_assignment_action" 
                groups="domestico.domestico_group_manager"/>

        </menuitem>

        <menuitem id="domestico_product_pricelist_menu" name="Ciclos" sequence="3" groups="domestico.domestico_group_manager">

            <menuitem 
                id="domestico_product_pricelist_action_menu" 
                name="Ciclo" 
                sequence="1" 
                action="domestico.domestico_product_pricelist_action"/>

            <menuitem 
                id="domestico_res_partner_product_pricelist_percent_action" 
                name="Rangos" 
                sequence="2" 
                action="domestico.res_partner_product_pricelist_percent_action"/>

        </menuitem>

        <menuitem 
            id="domestico_config_menu_root" 
            name="Configuración" 
            sequence="4"
            groups="domestico.domestico_group_manager">

            <menuitem 
                id="domestico_client_type_menu_action" 
                name="Tipo de cliente" 
                sequence="1"
                action="domestico.domestico_client_type_action" />

        </menuitem>

    </menuitem>
    
    <menuitem
        id="res_users_groups_menu"
        name="Módulos usuarios"
        action="res_users_groups_action"
        groups="base.group_system"
        parent="base.menu_users"
        sequence="10"/>

    <record model="ir.ui.menu" id="contacts.menu_contacts" >
        <field name="groups_id" eval="[(6,0,[ref('domestico.domestico_group_manager')])]"/>
    </record>

    <record model="ir.ui.menu" id="base.menu_board_root" >
        <field name="groups_id" eval="[(6,0,[ref('domestico.domestico_group_manager')])]"/>
    </record>

    <record model="ir.ui.menu" id="spreadsheet_dashboard.spreadsheet_dashboard_menu_root" >
        <field name="groups_id" eval="[(6,0,[ref('domestico.domestico_group_manager')])]"/>
    </record>

  </data>
</odoo>