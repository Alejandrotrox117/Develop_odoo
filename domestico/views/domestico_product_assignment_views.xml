<odoo>
    <data>

        <record id="view_domestico_product_assignment_tree" model="ir.ui.view">
          <field name="name">domestico.product.assignment.tree</field>
          <field name="model">domestico.product.assignment</field>
          <field name="arch" type="xml">
              <tree string="Solicitud" editable="bottom" multi_edit="1">
                  <field name="product_id" width="150" options="{'no_create': True, 'no_edit': True}"/>
                  <field name="product_count" />
              </tree>
          </field>
        </record>

        <record id="view_domestico_product_assignment_pivot" model="ir.ui.view">
          <field name="name">domestico.product.assignment.pivot</field>
          <field name="model">domestico.product.assignment</field>
          <field name="arch" type="xml">
            <pivot string="AsignaciÃ³n" >
                <field name="create_uid" type="row" />
                <field name="product_id" type="col" />
                <field name="product_count" type="measure"/>
            </pivot>
          </field>
        </record>

        <record id="action_domestico_product_assignment" model="ir.actions.act_window">
          <field name="name">Solicitud de electrodomestico</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">domestico.product.assignment</field>
          <field name="view_mode">pivot</field>
          <!-- <field name="domain">[('create_uid', '=', uid)]</field> -->
        </record>

        <record id="action_domestico_product_assignment_view_pivot" model="ir.actions.act_window.view">
          <field name="sequence" eval="1"/>
          <field name="view_mode">pivot</field>
          <field name="view_id" ref="domestico.view_domestico_product_assignment_pivot"/>
          <field name="act_window_id" ref="domestico.action_domestico_product_assignment"/>
        </record>

        <record id="action_domestico_product_assignment_solic" model="ir.actions.act_window">
          <field name="name">Solicitud de electrodomestico</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">domestico.product.assignment</field>
          <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>