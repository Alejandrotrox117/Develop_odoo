<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_invoice_custom" inherit_id="account.report_invoice_document">
        <xpath expr="//p[@name='payment_communication']" position="replace">
        </xpath>
        <xpath expr="//tr/th[@name='th_taxes']/span" position="replace">
        </xpath>
        <xpath expr="//div[hasclass('row')]" position="replace">
            <div class="row row-cols-1">
                <strong >Datos del cliente</strong>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">Nombre y Apellido: </strong>
                                <label class="mb-0 text-end " t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong >Cédula de identidad:</strong>
                                <label t-field="o.partner_id.ci"
                                    t-options='{"fields": ["o.partner_id.ci"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">RIF:</strong>
                                <label t-field="o.partner_id.vat"
                                    t-options='{"fields": ["o.partner_id.ci"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">Contacto:</strong>
                                <label t-field="o.partner_id.phone"
                                    t-options='{"fields": ["phone"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">Dirección:</strong>
                                <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]" position="after">
            <div class="container overflow-hidden">
                <div class="row row-cols-2">
                    <div class="col ">
                        <div class="m-5">
                            <div class="col-7">
                                <div class="row row-cols-1">
                                    <strong class="col">Recibe conforme:</strong>
                                    <span class="col">Nombre y Apellido:</span>
                                    <span class="col">Cédula de Identidad:</span>
                                    <span class="col">Fecha que Recibe:</span>
                                    <span class="col">Firma:________________</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="m-5">
                            <div class="col-7">
                                <div class="col-7">
                                    <strong class="col">Entrega conforme:</strong>
                                    <span>Nombre y Apellido:</span>
                                    <span>Cédula de Identidad:</span>
                                    <span>Fecha que Recibe:</span>
                                    <span>Firma:________________</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>