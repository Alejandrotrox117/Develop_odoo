<odoo>
    <template id="sale_order_report_custom" inherit_id="sale.report_saleorder_document">
        <xpath expr="//td[@name='td_taxes']"
            position="replace">
        </xpath>
        <xpath expr="//th[@name='th_taxes']"
            position="replace">
        </xpath>
        <xpath expr="//t[@t-set='information_block']" position="replace">
        </xpath>
        <xpath
            expr="//div[@t-field='doc.partner_id']" position="replace">
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table table-borderless mt-4']"
            position="before">
            <table class="table table-sm o_main_table table-borderless">
                <thead>
                    <tr>
                        <th>
                            <span>Cliente</span>
                        </th>
                        <th>
                            <span>Cédula</span>
                        </th>
                        <th>
                            <span>Dirección</span>
                        </th>
                        <th>
                            <span>Firma del Cliente</span>
                        </th>
                        <th>
                            <span>Firma del Empleado</span>
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div t-field="doc.partner_id"
                                t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}' />
                        </td>
                        <td>
                            <address class="mb-0" t-field="doc.partner_id.ci"
                                t-options='{"fields": ["o.partner_id.ci"], "no_marker": True}' />
                        </td>
                        <td>
                            <address class="mb-0" t-field="doc.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                        </td>

                        <td>
                            <div class="mb-0 m-2 text-center">
                                <label>
                                    <strong>_____________________________</strong>
                                </label>
                            </div>
                        </td>

                        <td>
                            <div class="mb-0 m-2 text-center">
                                <label>
                                    <strong>_____________________________</strong>
                                </label>
                            </div>
                        </td>

                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>