<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
        
        <record id="domestico_account_user_group_record_rule" model="ir.rule">
            <field name="name">Facturas: mis facturas</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('domestico.domestico_group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="domestico_account_manager_group_record_rule" model="ir.rule">
            <field name="name">Facturas: todas las facturas</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('domestico.domestico_group_manager'))]"/>
        </record>

        <record id="domestico_account_payment_user_group_record_rule" model="ir.rule">
            <field name="name">Pagos: mis pagos</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('domestico.domestico_group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="domestico_account_payment_manager_group_record_rule" model="ir.rule">
            <field name="name">Pagos: todas las pagos</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('domestico.domestico_group_manager'))]"/>
        </record>

   </data>
</odoo>