<odoo>
    <data>
        <record model="ir.ui.view" id="domestico_account_payment_register_form_inherit">
          <field name="name">domestico.account.payment.register.form.inherit</field>
          <field name="model">account.payment.register</field>
          <field name="inherit_id" ref="account.view_account_payment_register_form"/>
          <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='payment_method_line_id']" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//group[@name='group2']" position="replace">
                <group name="group2" string="Desde">
                  <field name="payment_method_line_id" required="1" invisible="1"/> 
                  <field name="is_internacional_bank" invisible="1"/> 
                  <field name="payments" />
                  <field name="bank_id" />
                  <label for="amount" attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}"/>
                  <div name="amount_div" class="o_row" attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}">
                      <field name="amount"/>
                      <field name="currency_id" required="1" readonly="1" groups="base.group_multi_currency"/>
                  </div>
                  <label for="file_ref" attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}"/>
                  <div name="reference_div" class="o_row" attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}">
                      <field name="filename" />
                      <field name="file_ref" filename="filename" attrs="{'required': [('is_internacional_bank', '=', True)] }"/>
                  </div>
                  <field name="reference" />
                </group>
            </xpath>
            
            <xpath expr="//group[@name='group1']" position="attributes">
              <attribute name="string">Para</attribute>
            </xpath>

            <xpath expr="//group[@name='group1']" position="inside">
              <field name="communication" readonly="1"/>
            </xpath>

            <xpath expr="//group[@name='group2']" position="after">
              <xpath expr="//group[@name='group1']" position="move" />
            </xpath>


          </field>
        </record>

    </data>
</odoo>