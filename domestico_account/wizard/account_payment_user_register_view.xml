<odoo>
    <data>

        <record model="ir.ui.view" id="domestico_account_payment_user_register_form_inherit">
          <field name="name">domestico.account.payment.user.register.form.inherit</field>
          <field name="model">account.payment.user.register</field>
          <field name="arch" type="xml">
             <form string="Register Payment">
                <sheet>
                    <group>
                        <group name="group1">
                            <field name="available_payment_method_line_ids" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="journal_id" options="{'no_open': True, 'no_create': True}" required="1"
                                    domain="[('type', '=', 'bank'), ('company_id', '=', company_id)]"/>
                            <field name="payment_method_line_id" required="1"
                                    domain="[('id', 'in', available_payment_method_line_ids)]" />
                        </group>
                        <group name="group2">
                            <field name="bank_id" invisible="1"/>
                            <field name="is_internacional_bank" invisible="1"/>
                            <label for="amount"/>
                            <div name="amount_div" class="o_row" >
                                <field name="amount"/>
                                <field name="currency_id"
                                       required="1"
                                       options="{'no_create': True, 'no_open': True}"/>
                            </div>
                            <field name="date"/>
                            <field name="reference"/>
                            <label for="file_ref" />
                            <div name="reference_div" class="o_row" >
                                <field name="filename" />
                                <field name="file_ref" filename="filename" attrs="{'required': [('is_internacional_bank', '=', True)] }"/>
                            </div>
                        </group>
                    </group>
                </sheet>
                    <footer>
                        <button string="Confirmar" name="action_create_payments" type="object" class="oe_highlight" data-hotkey="q"/>
                        <!-- <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/> -->
                    </footer>
                </form>
          </field>
        </record>

         <record id="domestico_account_payment_user_register_action" model="ir.actions.act_window">
          <field name="name">Registrar Pago</field>
          <field name="type">ir.actions.act_window</field>
          <field name="target">new</field>
          <field name="res_model">account.payment.user.register</field>
          <field name="view_id" ref="domestico_account.domestico_account_payment_user_register_form_inherit"/>
          <field name="view_mode">form</field>
        </record>

    </data>
</odoo>