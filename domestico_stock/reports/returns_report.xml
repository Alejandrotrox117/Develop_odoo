<odoo>
    <!-- Contenedor donde se guardaba la cantidad entregada-->
    <template id="stock_report_customs"
        inherit_id="stock.stock_report_delivery_aggregated_move_lines">
        <xpath expr="//td[@name='move_line_aggregated_qty_ordered']" position="replace">
        <td>
            <span t-field="o.product_id.cubicaje" />
            </td>
        </xpath>

    </template>

    <!--Reporte de albaran en el inventario-->
    <template id="report_returns_custom" inherit_id="stock.report_delivery_document">

        <xpath expr="//div[hasclass('row')]" position="replace">
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
        </xpath>
        <xpath expr="//th[@name='th_sml_qty_ordered']" position="replace">
        </xpath>

        <xpath expr="//th[@name='th_sml_product']" position="after">
            <th scope="col">Cubicaje</th>
        </xpath>

        <xpath expr="//table[@name='stock_move_table']" position="before">
            <table class="table  table-sm  o_main_table table-borderless">
                <thead>
                    <tr>
                        <th scope="col">Cliente</th>
                        <th scope="col">Cédula</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Firma del Cliente</th>
                        <th scope="col">Firma del Empleado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="bg-white">
                            <strong>
                                <address class="mb-0 me-4 text-dark" t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}' />
                            </strong>
                        </td>
                        <td class="bg-white">
                            <strong>
                                <address class="mb-1  text-dark" t-field="o.partner_id.ci"
                                    t-options='{"fields": ["o.partner_id.ci"], "no_marker": True}' />
                            </strong>
                        </td>
                        <td class="bg-white">
                            <strong>
                                <address class="mb-0 text-dark" t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                            </strong>
                        </td>
                        <td class="bg-white">
                            <div class="mb-4 m-2 text-dark text-center">
                                <label>
                                    <strong>____________________________</strong>
                                </label>
                            </div>
                        </td>
                        <td class="bg-white">
                            <div class="mb-4 m-2 text-dark text-center">
                                <label>
                                    <strong>____________________________</strong>
                                </label>
                            </div>
                        </td>

                    </tr>
                </tbody>
            </table>
        </xpath>
        <xpath expr="//div[hasclass('page')]/h2" position="replace">
            <h2>
                <span t-field="o.picking_type_id"></span>
                <span t-field="o.name" />
            </h2>
        </xpath>
    </template>
    <!--Accion de operaciones de albaran -->
    <record model="ir.actions.report" id="stock.action_report_picking">
        <field name="groups_id" eval="[(6,0,[ref('domestico.make_invisible')])]" />
    </record>
</odoo>