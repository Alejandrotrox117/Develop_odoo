<odoo>
    <!-- Contenedor donde se guardaba la cantidad entregada-->
    <template id="stock_report_customs"
        inherit_id="stock.stock_report_delivery_aggregated_move_lines">
        <xpath expr="//td[@name='move_line_aggregated_qty_ordered']" position="replace">
            <td>
                <span t-field="o.product_id.cubicaje" />
            </td>
        </xpath>
    </template>
    <!--Reporte de albaran en el inventario-->
    <template id="report_returns_custom" inherit_id="stock.report_delivery_document">
        <xpath expr="//th[@name='th_sml_product']" position="after">
            <th>Cubicaje</th>
        </xpath>
        <xpath expr="//div[@name='div_outgoing_address']" position="replace">
        </xpath>
        <xpath expr="//div[@name='div_sched_date']" position="replace">
        </xpath>
        <xpath expr="//div[hasclass('row')]" position="replace">
        </xpath>
        <xpath expr="//div[hasclass('page')]/h2" position="replace">
            <h2>
                <span class="p-1" t-field="o.picking_type_id"></span>
                <span t-field="o.name" />
            </h2>
        </xpath>
        
        <xpath expr="//th[@name='th_sml_qty_ordered']" position="replace">
        </xpath>

        <xpath expr="//t[@t-set='address']" position="after">
            <div t-if="o.state" class="col " name="div_sched_date">
                <strong>Fecha:</strong>
                <t t-if="o.state == 'done'">
                    <p t-field="o.date_done" />
                </t>
                <t t-if="o.state != 'done'">
                    <p t-field="o.scheduled_date" />
                </t>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="before">
            <div class="row row-cols-1">
                <strong style="margin-left:30px" class="p-2 ">Datos del cliente</strong>

                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">Nombre y Apellido:</strong>
                                <span t-field="o.move_ids[0].partner_id.name" />

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">Cédula de identidad:</strong>
                                <label t-field="o.partner_id.ci"
                                    t-options='{"fields": ["o.partner_id.ci"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">RIF:</strong>
                                <label t-field="o.partner_id.vat"
                                    t-options='{"fields": ["o.partner_id.ci"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">Contacto:</strong>
                                <label t-field="o.partner_id.phone"
                                    t-options='{"fields": ["phone"], "no_marker": True}' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-9">
                            <div class="col-4">
                                <strong class="col-6">Direccion:</strong>
                                <label t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        
        <xpath expr="//div[hasclass('page')]" position="after">
            <div class="container overflow-hidden">
                <div class="row row-cols-2">
                    <div class="col ">
                        <div class="m-5">
                            <div class="col-7">
                                <div class="row row-cols-1">
                                    <strong class="col">Recibe conforme:</strong>
                                    <span class="col">Nombre y Apellido:</span>
                                    <span class="col">Cédula de Identidad:</span>
                                    <span class="col">Fecha que Recibe:</span>
                                    <span class="col">Firma:________________</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="m-5">
                            <div class="col-7">
                                <div class="col-7">
                                    <strong class="col">Entrega conforme:</strong>
                                    <span>Nombre y Apellido:</span>
                                    <span>Cédula de Identidad:</span>
                                    <span>Fecha que Recibe:</span>
                                    <span>Firma:________________</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <!--Accion de operaciones de albaran -->
    <record model="ir.actions.report" id="stock.action_report_picking">
        <field name="groups_id" eval="[(6,0,[ref('domestico.make_invisible')])]" />
    </record>
</odoo>