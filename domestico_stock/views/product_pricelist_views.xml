<odoo>
    <data>

        <record model="ir.ui.view" id="domestico_product_pricelist_form_inherit">
            <field name="name">domestico.product.pricelist.form.inherit</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="warehouse_id" required="1" options="{'no_edit': True, 'no_create': True}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>