<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="domestico_stock_picking_inherit_form_stock_picking" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="after">
                <field name="active" invisible="1" />
                <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.server" id="domestico_stock_picking_archived_action">
       <field name="name">Archivar</field>
       <field name="model_id" ref="stock.model_stock_picking"/>
       <field name="binding_model_id" ref="stock.model_stock_picking"/>
       <field name="state">code</field>
       <field name="code">
           action = records.action_archive()
       </field>
    </record>
    
</odoo>
