        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="directorio" id="directorio.menu_root"/>
    <!-- menu categories -->

    <menuitem name="Inicio" id="directorio.menu_1" parent="directorio.menu_root"/>
    <!-- actions -->

    <menuitem name="Referidos" id="directorio.menu_1_list" parent="directorio.menu_1"
              action="directorio.action_window"/>
    <menuitem name="Contactos" id="directorio.menu_2_list" parent="directorio.menu_1"
              action="directorio.action_window"/>

  </data>
</odoo>