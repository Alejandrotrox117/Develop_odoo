<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="directorio.list">
      <field name="name">directorio list</field>
      <field name="model">directorio.directorio</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="directorio.action_window">
      <field name="name">directorio window</field>
      <field name="res_model">directorio.directorio</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
